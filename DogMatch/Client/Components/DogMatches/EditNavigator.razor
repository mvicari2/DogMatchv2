@using DogMatch.Client.Services
@inject NavigationService navigate

<div class="d-flex flex-md-column align-items-center">
    <MatChipSet>
        <MatChip LeadingIcon="list"
                 Label="Edit Basic Details"
                 Class="custom-chip"
                 @onclick="() => navigate.ToUpdateDoggo(DogId) " />
        <MatChip LeadingIcon="bar_chart"
                 Label="Edit Temperament"
                 Class="custom-chip"
                 @onclick="() => navigate.ToTemperament(DogId)" />
        <MatChip LeadingIcon="speaker_notes"
                 Label="Edit Biography"
                 Class="custom-chip"
                 @onclick="() => navigate.ToBiography(DogId)" />
        <MatChip LeadingIcon="add_photo_alternate"
                 Label="Edit Dog Album"
                 Class="custom-chip"
                 @onclick="() => navigate.ToDogAlbum(DogId)" />
    </MatChipSet>
</div>

@code {
    [Parameter]
    public int DogId { get; set; }
}