@using System.Reflection
@inherits LayoutComponentBase

<RadzenNotification />
<header>
    <NavMenu />
</header>

<div class="main">
    <div class="content px-4">
        @Body
    </div>
</div>
<br />

<footer class="fixed-bottom footer-block">
    <div class="footer-custom">
        &copy; 2020 DogMatch - @version
    </div>
</footer>

@code {
    private string version;

    protected override void OnInitialized()
    {
        // get global assembly informational version
        var assemblyVersionAttribute = (AssemblyInformationalVersionAttribute)Assembly
            .GetExecutingAssembly()
            .GetCustomAttributes(typeof(AssemblyInformationalVersionAttribute), true)
            .Single();
        version = string.Concat("v", assemblyVersionAttribute.InformationalVersion);
    }
}