@using Microsoft.AspNetCore.Identity
@using DogMatch.Domain.Data.Models

@inject SignInManager<DogMatchUser> SignInManager
@inject UserManager<DogMatchUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var returnUrl = "/";
    if (Context.Request.Query.TryGetValue("returnUrl", out var existingUrl))
    {
        returnUrl = existingUrl;
    }
}

<nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark border-bottom box-shadow mb-3"
     style="background-color: #273652">
    <div class="container">
        <a class="navbar-brand" href="/">DogMatch</a>
        <button class="navbar-toggler"
                type="button" data-toggle="collapse"
                data-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-light" href="/AllDoggos">
                        <span class="oi oi-list-rich"
                              aria-hidden="true">
                        </span>
                        All Doggos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/MyDoggos">
                        <span class="oi oi-list-rich"
                              aria-hidden="true">
                        </span>
                        My Doggos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="/CreateDoggo">
                        <span class="oi oi-plus"
                              aria-hidden="true">
                        </span>
                        Create Doggo
                    </a>
                </li>
            </ul>

            <div class="dropdown">
                <button class="btn btn-secondary btn-sm dropdown-toggle"
                        type="button" id="dropdownMenuButton"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @User.Identity.Name
                    }
                    else
                    {
                        <span>Login/Register</span>
                    }
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link dropdown-item text-dark"
                           asp-area="Identity"
                           asp-page="/Account/Manage/Index"
                           title="Manage">
                            <span class="oi oi-person"
                                  aria-hidden="true">
                            </span>
                            &nbsp Profile
                        </a>
                        <form class="form-inline"
                              asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="/"
                              method="post">
                            <button type="submit"
                                    class="nav-link btn btn-link text-dark dropdown-item">
                                <span class="oi oi-account-logout"
                                      aria-hidden="true">
                                </span>
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link dropdown-item text-dark"
                           asp-area="Identity"
                           asp-page="/Account/Login"
                           asp-route-returnUrl="@returnUrl">
                            <span class="oi oi-account-login"
                                  aria-hidden="true">
                            </span>
                            &nbsp Login
                        </a>
                        <a class="nav-link text-dark"
                           asp-area="Identity"
                           asp-page="/Account/Register"
                           asp-route-returnUrl="@returnUrl">
                            <span class="oi oi-clipboard"
                                  aria-hidden="true">
                            </span>
                            &nbsp Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</nav>